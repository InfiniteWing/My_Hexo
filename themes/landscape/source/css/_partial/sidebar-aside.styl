#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  color: color-sidebar-text
  background: color-widget-background
  border: 1px solid color-widget-border
  padding: 15px
  border-radius: 3px
  a
    color: color-default
    text-decoration: none
    &:hover
      color: color-link
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
.widget-profile
  text-align: center
.widget-profile-title
  @extend $block-caption
.widget-profile-avatar
  background: url(avatar-url) center #000
  width: 146px
  height: 146px
  background-size: contain
  border-radius: 50%
  display: inline-block
  border: 4px solid color-background
  box-shadow: 0 0 0 3px #fff

.widget-profile-socials
  letter-spacing: 5px
  margin-bottom: 10px
.widget-profile-socials
  a
    text-decoration: none
  i
    color: #fff
    &:hover
      color:#999
<header id="header">
  <div id="banner"></div>
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
      <h1 id="logo-wrap">
        <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
      </h1>
      <% if (theme.subtitle){ %>
        <h2 id="subtitle-wrap">
          <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
        </h2>
      <% } %>
    </div>
    <div id="header-inner" class="inner">
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
        <a class="main-nav-link nav-icon" href="/">
          <li class="fa fa-home" style="font-size: 1.3em;"></li>
        </a>
        <a class="main-nav-link nav-icon" href="/about.html">
          <li class="fa fa-user" style="font-size: 1.3em;"></li>
        </a>
        <a class="main-nav-link nav-icon" href="/archives">
          <li class="fa fa-archive" style="font-size: 1.3em;"></li>
        </a>
        <a class="main-nav-link nav-icon" href="/work">
          <li class="fa fa-gamepad" style="font-size: 1.3em;"></li>
        </a>
        <a class="main-nav-link nav-icon" href="/gallery">
          <li class="fa fa-heart" style="font-size: 1.3em;"></li>
        </a>
      </nav>
      <nav id="sub-nav">
        <% if (theme.rss){ %>
          <a id="nav-rss-link" class="nav-icon" href="<%- theme.rss %>" title="<%= __('rss_feed') %>"><li class="fa fa-rss" style="font-size: 1.3em;"></li></a>
        <% } %>
        <a id="nav-search-btn" class="nav-icon" title="<%= __('search') %>"><li class="fa fa-search" style="font-size: 1.3em;"></li></a>
      </nav>
      <div id="search-form-wrap">
        <%- search_form({button: '&#xF002;'}) %>
      </div>
    </div>
  </div>
</header>